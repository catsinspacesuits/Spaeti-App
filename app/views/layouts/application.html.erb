<!DOCTYPE html>
<html>
  <head>
    <title>SpaetiApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

  </head>

  <body>

  	<nav class="navbar navbar-default">
  		<div class="container">
  			<div class="navbar-header">
					<%= link_to "Hello Spaeti!", root_path, class: "navbar-brand"  %>
				</div>	
				<ul class="nav navbar-nav">
					<li><%= link_to "Sign Up", new_user_registration_path %></li>
					<% if user_signed_in?  %>
						<li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
					<% else %>
						<li><%= link_to "Log In", new_user_session_path %> </li>
					<% end %>
					<% if user_signed_in? %>
						<li><%= link_to "Add Spaeti", new_store_path %></li>
					<% else %>
						<li><%= link_to "Add Spaeti", new_user_registration_path %> </li>
					<% end %>
					<li><%= link_to "Spaetis with toilets", stores_path(toilet: Toilet.all[0].toilet_available) %></li>
					
					
					
				</ul>
			</div>
		</nav>

		<p class="notice"><%= notice %></p>
		<p class="alert"><%= alert %></p>

    <%= yield %>

  </body>
</html>
