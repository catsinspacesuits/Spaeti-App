<!DOCTYPE html>
<html>
  <head>
    <title>SpaetiApp</title>
    <%= csrf_meta_tags %>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %> 
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>

  <body>

  	<nav class="navbar navbar-inverse">
  	  <div class="container-fluid">
  	    <div class="navbar-header">
  	      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
  	        <span class="icon-bar"></span>
  	        <span class="icon-bar"></span>
  	        <span class="icon-bar"></span>                        
  	      </button>
    			<div class="navbar-header">
  					<%= link_to "Hello Spaeti!", root_path, class: "navbar-brand"  %>
  				</div>
  	    </div>
  	    <div class="collapse navbar-collapse" id="myNavbar">
  	      <ul class="nav navbar-nav">
  	        <li><%= link_to "Spätis with toilets", stores_path(toilet: Toilet.first.toilet_available) %></li>
  	      <!-- Can only add spaeti when logged in. Directed to Log in if not logged in -->
	  	      <% if user_signed_in? %>
	  	      	<li><%= link_to "Add Späti", new_store_path %></li>
	  	      <% else %>  
	  	        <li><%= link_to "Add Späti", new_user_session_path %></li>
	  	      <% end %>
  	      </ul>
  	      <ul class="nav navbar-nav navbar-right">
  	      	<!-- Log out shows when logged in. Log in shows when not logged in -->
  	      	<% if user_signed_in? %>
	  	        <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
  	        <% else %>
	  	        <li><%= link_to "Sign Up", new_user_registration_path %></li>
	  	        <li><%= link_to "Log In", new_user_session_path %></li>
  	        <% end %>
  	      </ul>
  	    </div>
  	  </div>
  	</nav> <!-- end of navbar -->

		<p class="notice"><%= notice %></p>
		<p class="alert"><%= alert %></p>

    <%= yield %>

  </body>
</html>
