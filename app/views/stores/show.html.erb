<main class="container show-container">
  <h2><%= @store.capitalize_name %></h2>
  <h3><%= 'Address: ' + @store.capitalize_address %></h3>
  <h3><%= 'Cost of Berliner Pilsner (0.5l): â‚¬' + @store.beer_cost.to_s %></h3>
  <% if @store.toilet.toilet_available == "Yes" %>
    <h3><%= "This Spaeti has a toilet!" %></h3>
  <% else %> 
  <% end %>
</main>

<%= map(:center => {
    :latlng => [ @store.latitude, @store.longitude ],
    :zoom => 17
  },

  :markers => [
      {  
         :latlng => [ @store.latitude, @store.longitude ],
         :popup => @store.capitalize_name + ", " + @store.capitalize_address 
      }
    ]
  ) %>

<%= link_to 'Back', root_path %>

<% if user_signed_in? %>

	<% if @store.user_id == current_user.id %>

	<%= link_to 'Edit', edit_store_path(@store) %>
	<%= link_to 'Delete', store_path(@store), method: :delete, data: { confirm: "Are you sure?" } %>
	
	<% end %>

<% end %>





