<%= simple_form_for @store do |f| %>
	<%= f.input :name, label: "Spaeti Name" %>
	<%= f.input :address, label: "Address" %>
	<%= f.input :address_line2, label: "City" %>
	<%= f.input :address_line3, label: "Country" %>
	<%= f.input :beer_cost, label: "Cost of a Berliner" %>
	<%= f.input :toilet,     as: :radio_buttons %>
	<%= f.input :facilities, label: "Facilities" %>

	<%= f.button :submit %>
<% end %>